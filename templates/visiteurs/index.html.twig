{% extends 'base.html.twig' %}

{% block title %}Visiteurs index{% endblock %}

{% block body %}
    <h1>Visiteurs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Vis_nom</th>
                <th>Vis_prenom</th>
                <th>Vis_tel</th>
                <th>Vis_dateEmbauche</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for visiteur in visiteurs %}
            <tr>
                <td>{{ visiteur.id }}</td>
                <td>{{ visiteur.email }}</td>
                <td>{{ visiteur.roles ? visiteur.roles|json_encode : '' }}</td>
                <td>{{ visiteur.password }}</td>
                <td>{{ visiteur.visNom }}</td>
                <td>{{ visiteur.visPrenom }}</td>
                <td>{{ visiteur.visTel }}</td>
                <td>{{ visiteur.visDateEmbauche }}</td>
                <td>
                    <a href="{{ path('visiteurs_show', {'id': visiteur.id}) }}">show</a>
                    <a href="{{ path('visiteurs_edit', {'id': visiteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('visiteurs_new') }}">Create new</a>
{% endblock %}
